<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FitLife.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FitLife.Views">

    <TabBar>
        <ShellContent
            Title="Exercises"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="dumbbell.svg" />

        <ShellContent
            Title="Workouts"
            ContentTemplate="{DataTemplate local:WorkoutPage}"
            Icon="workout.svg" />

        <ShellContent
            Title="Map"
            ContentTemplate="{DataTemplate local:FindGymPage}"
            Icon="map.svg" />
    </TabBar>

</Shell>
